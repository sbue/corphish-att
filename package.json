{
  "name": "@corphish/corphish-att",
  "private": true,
  "scripts": {
    "with-env": "dotenv -e .env --",
    "web": "pnpm with-env turbo run dev --filter=@corphish/web...",
    "playground": "turbo run dev --filter=@corphish/playground...",
    "mastra": "pnpm --filter @corphish/api run mastra",
    "bot:new": "bash scripts/bot/new.sh",
    "bot:start": "bash scripts/bot/start.sh",
    "bot:land": "bash scripts/bot/land.sh",
    "bot:cleanup": "bash scripts/bot/cleanup.sh",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yaml,yml}\"",
    "type-check": "turbo run type-check",
    "postinstall": "pnpm --filter @corphish/db generate"
  },
  "devDependencies": {
    "@corphish/eslint": "workspace:*",
    "@corphish/prettier": "workspace:*",
    "@corphish/tsconfig": "workspace:*",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "prettier": "^3.8.1",
    "turbo": "^2.8.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "pnpm": ">=10"
  },
  "prettier": "@corphish/prettier"
}
