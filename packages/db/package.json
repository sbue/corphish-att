{
  "name": "@corphish/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./client": "./src/client.ts"
  },
  "scripts": {
    "generate": "prisma generate --config prisma.config.ts",
    "migrate": "prisma migrate dev --config prisma.config.ts",
    "migrate:db": "prisma migrate deploy --config prisma.config.ts",
    "studio": "prisma studio --config prisma.config.ts",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "clean": "rm -rf dist .turbo node_modules"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.4.0",
    "@prisma/client": "^7.3.0",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@corphish/eslint": "workspace:*",
    "@corphish/prettier": "workspace:*",
    "@corphish/tsconfig": "workspace:*",
    "@types/node": "^24.9.0",
    "@types/pg": "^8.15.6",
    "prisma": "^7.3.0",
    "typescript": "^5.9.3"
  },
  "prettier": "@corphish/prettier"
}
