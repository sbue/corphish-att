{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "buildCommand": "bash ./scripts/railway/build.sh",
    "watchPatterns": [
      "apps/web/**",
      "packages/**",
      "package.json",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml",
      "scripts/**",
      "railway.json",
      "turbo.json"
    ]
  },
  "deploy": {
    "startCommand": "bash ./scripts/railway/start.sh",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
