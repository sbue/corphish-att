{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "buildCommand": "corepack enable && pnpm install --frozen-lockfile && pnpm --filter @corphish/web build",
    "watchPatterns": [
      "apps/web/**",
      "packages/**",
      "package.json",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml",
      "turbo.json"
    ]
  },
  "deploy": {
    "startCommand": "node apps/web/.next/standalone/apps/web/server.js",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE"
  }
}
