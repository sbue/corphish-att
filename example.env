# App
NODE_ENV=development

# Local default. In Railway set this to your public HTTPS URL.
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Railway sets PORT automatically in production.
PORT=3000

# Railway Postgres connection string (or another Postgres provider)
DATABASE_URL=postgresql://YOUR_USER:YOUR_PASSWORD@YOUR_HOST:5432/YOUR_DATABASE

# Auth.js
# Generate a strong random secret: `openssl rand -base64 32`
AUTH_SECRET=your-long-random-secret
AUTH_URL=https://your-app.up.railway.app
AUTH_TRUST_HOST=true
# Only this email can request magic-link login
AUTH_ALLOWED_EMAIL=you@example.com
AUTH_RESEND_KEY=re_YOUR_RESEND_API_KEY
AUTH_RESEND_FROM=auth@yourdomain.com

# Shared secret required for POST /api/metrics/location
LOCATION_METRICS_WEBHOOK_KEY=replace-with-a-long-random-string
